{% extends 'base.html.twig' %}

{% block body %}
    <div class="container text-center">
        <div class="row justify-content-md-center">
    {% for label, messages in app.flashes(['success', 'danger']) %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}" role="alert">
                <h4 class="alert-heading">Notificacion</h4>
                <p>{{ message }}</p>
                <hr>
                <p class="mb-0">Tambien podes comunicarte a los telefonos: 1213564698.</p>
            </div>
        {% endfor %}
    {% endfor %}
            <div class="d-grid gap-2">
                <a href="{{ path('app_web_contact') }}" class="btn btn-secondary">Volver a Contacto</a>
            </div>
        </div>
    </div>
{% endblock %}